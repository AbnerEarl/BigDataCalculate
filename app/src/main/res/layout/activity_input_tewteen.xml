<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputTewteenActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/line21data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et21_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第1组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第2组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第3组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第4组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第5组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第6组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第7组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第8组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第9组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第10组，英文逗号分隔！" />

            <EditText
                android:id="@+id/et21_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shape"
                android:hint="请输入21个数的第11组，英文逗号分隔！" />

            <Button
                android:id="@+id/get21data"
                android:text="开始计算"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>